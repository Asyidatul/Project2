     private class TotalPrice{ //innerclass
        int a; 
        int b;
        int c;
        int d;
        int e;
     double geta(){
       return a;
    }
      double getb(){
       return b;
    }
      double getc(){
       return c;
    } 
      double getd(){
       return d;
    } 
      double gete(){
       return e;
    }
        double getTotalPrice(){
       
        double totalprice=0;
        totalprice=(no.getpriceBurger()*a)+(no.getpriceNasiLemak()*b)+(no.getpriceChicken()*c)+(no.getpriceCola()*d)+(no.getpriceSprite()*e);
        return totalprice;
        }
      }
    
